# vim: ts=2 sw=2 sts=2 et syntax=sh
find . -name .repo -prune \
  -o -name .git -prune \
  -o -name .externalNativeBuild -prune \
  -o -path "./out*" -prune \
  -o -path "*/build/*" -prune \
  -o -type f \( -name '*.c' -o -name '*.cc' -o -name '*.cpp' -o -name '*.h' -o -name '*.hpp' \) \
  -print0 | xargs -0 grep --color -n "$@"
