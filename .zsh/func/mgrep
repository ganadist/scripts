# vim: ts=2 sw=2 sts=2 et syntax=sh
find . -name .repo -prune \
  -o -name .git -prune \
  -o -name .externalNativeBuild -prune \
  -o -path "./out*" -prune \
  -o -path "*/build/*" -prune \
  -o -regextype posix-egrep -iregex '(.*\/Makefile|.*\/Makefile\..*|.*\.make|.*\.mak|.*\.mk|.*\.bp|.*\/Kconfig|.*\.gradle|.*\.gradle.kts)' -type f \
  -exec grep --color -n "$@" {} +
