# vim: ts=2 sw=2 sts=2 et syntax=sh
find . -name .repo -prune \
  -o -name .git -prune \
  -o -name .externalNativeBuild -prune \
  -o -path "./out*" -prune \
  -o -path "*/build/*" -prune \
  -o -type f \( -name "*.gradle" -o -name "*.gradle.kts" -o -name "Makefile*" -o -name "*.mk" -o -name "*.mak" \) \
  -exec grep --color -n "$@" {} +
